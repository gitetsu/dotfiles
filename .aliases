if type exa > /dev/null 2>&1; then
  alias l="exa -lgF"
  alias la="exa -lgaF"
else
  if ls --color > /dev/null 2>&1; then # GNU `ls`
    colorflag="--color"
  else # OS X `ls`
    colorflag="-G"
  fi
  alias l="ls -lF ${colorflag}"
  alias la="ls -laF ${colorflag}"
fi

alias b="brew"
alias c="composer"
alias d="docker"
alias dco="docker-compose"
alias g="hub"
alias mk="minikube"
alias kc="kubectl"
alias v="vim"
